						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"subscriberNo\": \"1001\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/bank/query-bill",
							"host": ["{{baseUrl}}"],
							"path": ["bank", "query-bill"]
						},
						"description": "Belirtilen abone numarasına ait ödenmemiş faturaları sorgular.\n\n**Gerekli Parametreler:**\n- `subscriberNo`: Abone numarası\n\n**Authorization:** Bearer Token gerekli"
					},
					"response": [
						{
							"name": "Success",
							"originalRequest": {
								"method": "POST",
								"header": [],
								"body": {
									"mode": "raw",
									"raw": "{\n    \"subscriberNo\": \"1001\"\n}"
								},
								"url": {
									"raw": "{{baseUrl}}/bank/query-bill",
